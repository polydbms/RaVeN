version: '2.1'

services:

  sedona:
    image: ghcr.io/polydbms/sedona:1.7.1-3.5.0
    volumes:
      - ../../data:/data
      - ../../config:/config
    ports:
      - "7077:7077"
      - 4040:4040
      - 8080:8080
      - 18080:18080
    user: root
    environment:
      - GRANT_SUDO=yes
    tty: true
